EXECUTOR		=	python3
MAIN_FILE		=	main.py


RESET			=	\033[0m
BOLD			=	\033[1m
ITALIC			=	\033[3m
RED				=	\033[31m
GREEN			=	\033[32m
YELLOW			=	\033[33m
MAGENTA			=	\033[35m
DIM				=	\033[2m


# **************************************************************************** #


all: run


run:
	@echo "$(RED)$$> $(MAGENTA)$(EXECUTOR) $(MAIN_FILE)$(RESET)"
	@$(EXECUTOR) $(MAIN_FILE)


# **************************************************************************** #

.PHONY: all run
